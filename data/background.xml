
<scenefile>
    <globaldata>
        <diffusecoeff v="0.5"/>
        <specularcoeff v="0.5"/>
        <ambientcoeff v="0.5"/>
    </globaldata>

    <cameradata>
        <pos x="5" y="5" z="5"/>
        <focus x="0" y="0" z="0"/>
        <up x="0" y="1" z="0"/>
        <heightangle v="45"/>
    </cameradata>

    <lightdata>
        <id v="0"/>
        <color r="1" g="1" b="1"/>
        <position x="8" y="8" z="8"/>
    </lightdata>

    <lightdata>
        <id v="1"/>
        <color r="1" g="1" b="1"/>
        <position x="-4" y="4" z="3"/>
    </lightdata>

    <object type="tree" name="root">
        <!-- Bottom plane (floor) -->
        <transblock>
            <translate x="0" y="0" z="0"/>
            <scale x="20" y="0.2" z="20"/>
            <object type="primitive" name="cube">
                <diffuse r="0.6" g="0.6" b="0.6"/>
                <specular r="0.1" g="0.1" b="0.1"/>
                <reflective r="0.2" g="0.2" b="0.2"/>
                <shininess value="15"/>
            </object>
        </transblock>
       
        <!-- Left wall (perpendicular to y-axis) -->
        <transblock>
            <translate x="-3" y="0" z="0"/>
            <scale x="0.2" y="20" z="20"/>
            <object type="primitive" name="cube">
                <diffuse r="0.6" g="0.6" b="0.6"/>
                <specular r="0.1" g="0.1" b="0.1"/>
                <reflective r="0.2" g="0.2" b="0.2"/>
                <shininess value="15"/>
            </object>
        </transblock>
       
        <!-- Back wall (perpendicular to y-axis) -->
        <transblock>
            <translate x="0" y="0" z="-3"/>
            <scale x="20" y="20" z="0.2"/>
            <object type="primitive" name="cube">
                <diffuse r="0.6" g="0.6" b="0.6"/>
                <specular r="0.1" g="0.1" b="0.1"/>
                <reflective r="0.2" g="0.2" b="0.2"/>
                <shininess value="15"/>
            </object>
        </transblock>
       
    </object>
</scenefile>
